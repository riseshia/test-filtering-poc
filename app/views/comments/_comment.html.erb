<div id="<%= dom_id comment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Username:</strong>
    <span><%= comment.username %></span>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Post:</strong>
    <span><%= comment.post_id %></span>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <span><%= comment.content %></span>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this comment", comment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this comment', edit_comment_path(comment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
